import java.util.*;
class Main{
    public static void main(String[] args){
        Scanner sc=new Scanner(System.in);
        String str=sc.nextLine();
        int len=str.length();
        System.out.println("Length: "+len);
        String lower=str.toLowerCase();
        System.out.println("ToLowerCase: "+lower);
        int vowels = 0, consonents=0;
        for(int i =0;i<len;i++){
            char ch=lower.charAt(i);
            if(ch != ' ' && ch>='a' && ch<='z'){
                if(ch =='a'||ch =='e'||ch =='i'||ch =='o'||ch =='u'){
                    vowels++;
                }
                else{
                    consonents++;
                }
            }
        }
        System.out.println("No of VOWELS in the sentense: " + vowels);
        System.out.println("No of CONSONANTS in the sentense: " + consonents);
        
    }
}

// Output:
Enter the SENTENCE or a WORD: Hii..! I am venkat
Length: 18
ToLowerCase: hii..! i am venkat
No of VOWELS in the sentense: 6
No of CONSONANTS in the sentense: 6
